
@model LoginViewModel

<section class="Register">

        <div class="title">
            <!-- <h2>Login</h2> -->
        </div>

    <div class= "inner-content">

            <div class="form-wrap">

                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class="form-wrap" }))
                {
                    <div class="form">
                        @Html.LabelFor(user => user.UserName)
                        @Html.TextBoxFor(user=> user.UserName)

                        @Html.LabelFor(user=> user.Password)
                        @Html.PasswordFor(user=> user.Password)

                        <input class="button" type="submit" value="Login" />
                    </div>
                    
                    <h5 style="color:white">"Don't have an account?</h5>
                    <button>@Html.ActionLink("Register", "Register")</button>
                }

            </div>

    
    <img id="logo" src="https://i.ibb.co/nkgC1YJ/logo.png" alt="logo">

    </div>


</section>