  
  
  <div class="user-page">

      <div class="allergies-card">
      
      @if ( Model.Count != 0)
      {
      <ul>
        @foreach (UserProfile userProfile in Model)
        {
          <li class="list-button">@Html.ActionLink($"{userProfile.Name}", "Details", new { id = userProfile.UserProfileId })</li>
          
        }
      </ul>
      } 
      else
      {
        <h3>No Users have been added yet!</h3>
        <p>@Html.ActionLink("Create Your Account", "Create", "UserProfiles")</p>
      }

      </div>

  </div>