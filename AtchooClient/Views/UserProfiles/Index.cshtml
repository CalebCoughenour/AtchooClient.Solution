
  <div class="user-page" style="
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  ">
    
    @if (Model.Count != 0)
    {
    
        @foreach (UserProfile userProfile in Model)
        {
          <div class="card h-100" style="max-width: 20rem;">
            <div class="card-title">
              <li class="list-button">@Html.ActionLink("View Your Profile", "Details", new { id = userProfile.UserProfileId })</li>
            </div>
            <img class="card-img-top"src="~/img/@userProfile.ImageUrl" /> 
          </div>
        }
      
    } 
    else
    {
      <h3></h3>
      <button style="margin-top: 10%">@Html.ActionLink("Create Your Account", "Create", "UserProfiles")</button>
    }
    
  </div>